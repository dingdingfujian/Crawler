extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post",action="/admin/movie/new")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 作者名称
					.col-sm-10
						input#inputTitle.form-control(type="text",name="movie[name]",value="#{movie.name}")

				.form-group
					label.col-sm-2.control-label(for="inputDoctor") 入园天数
					.col-sm-10
						input#inputTitle.form-control(type="text",name="movie[age]",value="#{movie.age}")
				.form-group
					label.col-sm-2.control-label(for="inputCountry") 粉丝
					.col-sm-10
						input#inputTitle.form-control(type="text",name="movie[fans]",value="#{movie.fans}")
				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 关注
					.col-sm-10
						input#inputTitle.form-control(type="text",name="movie[focus]",value="#{movie.focus}")
				.form-group
					.col-sm-offset-6.col-sm-6 
					button.btn.btn-default(type="submit") 录入
					button.btn.btn-default(type="submit") 更新